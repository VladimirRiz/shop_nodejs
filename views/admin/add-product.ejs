<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/style/forms.css"/>
</head>
<body>
    <%- include('../includes/nav.ejs') %>
        <main class="main">
            <form class="product-form" action="/admin/add-product" method="POST">
                <div class="form-control">
                    <label for="name">Name</label>
                    <input class="form-control__input" type="text" name="name" id="name"/>
                </div>
                <div class="form-control">
                    <label for="imageURL">Image</label>
                    <input class="form-control__input" type="text" name="imageURL" id="imageURL"/>
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input class="form-control__input" type="number" name="price" id="price" step="0.01"/>
                </div>
                <div class="form-control">
                    <label for="desc">Description</label>
                    <textarea class="form-control__input" type="text" name="desc" id="desc" rows="5"></textarea>
                </div>
                <button class="product-form__submit" type="submit">Submit</button>
            </form>
        </main>
<%- include('../includes/end.ejs') %>
  
